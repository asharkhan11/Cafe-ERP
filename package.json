{
  "name": "cafe-erp",
  "version": "1.0.0",
  "author": "Ashar Khan",
  "description": "Cafe ERP â€“ Offline POS and Inventory System",
  "main": "electron/main.js",
  "scripts": {
    "electron:dev": "electron .",
    "build:frontend": "cd frontend && npm run build",
    "build": "npm run build:frontend && electron-builder"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "asar": true,
    "appId": "com.cafe.erp",
    "productName": "CafeERP",
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "backend/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend/erp.db",
        "to": "erp.db"
      }
    ],
    "win": {
      "target": "portable"
    }
  }
}
